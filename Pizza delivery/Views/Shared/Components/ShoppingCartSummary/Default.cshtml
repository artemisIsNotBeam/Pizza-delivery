@using Pizza_delivery.ViewModels
@model ShoppingCartViewModel 

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
	<li class="nav-item">
        <a asp-controller="ShoppingCart" asp-action="Index" class="text-white nav-link">
            <i class="bi bi-cart-fill"></i>
            <span id="cart-status">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
	</li>
}