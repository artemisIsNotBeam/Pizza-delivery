@model IEnumerable<Category>

<li class="dropdown">
	<a class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown" asp-area="" asp-controller="Pizza" asp-action="Index">
	Pizza Types
	<b class="caret"></b>
	</a>
	<ul class="dropdown-menu">
		@foreach (var category in Model)
		{
			<li>
				<a asp-controller="Pizza" asp-action="List" class="dropdown-item"
					asp-route-category="@category.Name">@category.Name</a>
			</li>
		}
		<li class="dropdown-divider"></li>
		<li>
			<a class="dropdown-item" asp-controller="Pizza" asp-action="List" asp-route-Category="">View all pizzas</a>
		</li>
	</ul>
</li>