@model Pizza
<h2>@Model.Name</h2>
<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImgUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.Shortdesc</h4>
        <p>@Model.Longdesc</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pizzaId="@Model.PizzaId">Add to cart</a>
            </p>
        </div>
    </div>
</div>